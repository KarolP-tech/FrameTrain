{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FrameTrain",
  "version": "1.0.0",
  "identifier": "com.frametrain.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5002",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "FrameTrain",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/*", "$RESOURCE/*"]
    }
  }
}
