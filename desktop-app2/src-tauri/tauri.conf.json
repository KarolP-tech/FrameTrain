{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FrameTrain 2",
  "version": "1.0.24",
  "identifier": "com.frametrain.desktop2",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5003",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "python/*"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FrameTrain 2",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
  "fs": {
    "requireLiteralLeadingDot": true
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/KarolP-tech/FrameTrain/releases/latest/download/latest.json"
    ],
    "dialog": false,
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZDQzdBMzVGMUNCNzE4NDMKUldSREdMY2NYNlBIYklyancrZUhkQi9HRzkrUUZCSDBXSnBoM29qOGh3eG1UcEU3VzFHK0JxTnkK"
    }
  }
}
